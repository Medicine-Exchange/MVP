<%- include('common/header.ejs', {title, page: 'Home' }); %>
<%- include('common/navigation.ejs', {page: 'signup' }); %>
    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            <h1><span class="fa fa-sign-in"></span> Signup</h1>

            <!-- SIGNUP FORM -->
            <!-- Again signup route is wrong. Handle with JS. Removing action and method. -->
            <form>
                <div class="form-group">
                    <label>Mobile Number</label>
                    <input type="tel" class="form-control" name="mobile_number" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}">
                </div>
                <div class="form-group">
                    <label>Full Name</label>
                    <input type="tel" class="form-control" name="name" pattern="[0-9]{3}-[0-9]{2}-[0-9]{3}">
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                <div class="form-group">
                    <label>Address</label>
                    <input type="text" class="form-control" name="address">
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>Aadhar Number</label>
                    <input type="number" class="form-control" name="aadhar_number">
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Signup</button>
                <script src="https://www.gstatic.com/firebasejs/8.6.1/firebase-app.js"></script>
                <script src="https://www.gstatic.com/firebasejs/8.6.1/firebase-auth.js"></script>
                <%- include("javascripts/firebaseConfig.js"); %>
            </form>
            <hr>
            <p>Already have an account? <a href="/login">Login</a></p>
            <p>Or go <a href="/">home</a>.</p>
        </div>
    </div>
<%- include('common/footer.ejs'); %>